{
  // "extends": "../../tsconfig.json", // Commented out for Docker build
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false, // Disable strict mode to avoid type inference issues
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false, // Disable declarations to avoid type inference issues
    "declarationMap": false,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
